        {
          "name": "创建问卷",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"用户满意度调研\",\n  \"description\": \"了解用户对产品的满意度和改进建议\",\n  \"questions\": [\n    {\n      \"id\": \"q1\",\n      \"text\": \"您对我们产品的整体满意度如何？\",\n      \"type\": \"rating\",\n      \"options\": [\"1\", \"2\", \"3\", \"4\", \"5\"]\n    },\n    {\n      \"id\": \"q2\",\n      \"text\": \"您最喜欢产品的哪些功能？\",\n      \"type\": \"multiple_choice\",\n      \"options\": [\"界面设计\", \"功能丰富\", \"响应速度\", \"易用性\"]\n    },\n    {\n      \"id\": \"q3\",\n      \"text\": \"您有什么改进建议？\",\n      \"type\": \"open_ended\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/surveys/create",
              "host": ["{{base_url}}"],
              "path": ["api", "surveys", "create"]
            },
            "description": "创建新的调研问卷"
          }
        },
        {
          "name": "批量投放问卷",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
